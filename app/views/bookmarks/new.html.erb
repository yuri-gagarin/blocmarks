<div class="container-fluid">
  <div class="row">
    <h2 class="col-md-8 offset-md-2">Create a New Bookmark</h2>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
    <%= form_for(@bookmark) do |f| %>
      <div class="form-group">
        <%= f.label :url %><br />
        <div>
        <%= f.text_area :url, cols: 100, autofocus: true, autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description %><br />
        <div>
        <%= f.text_area :description, cols: 100, rows: 10, autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Create Bookmark", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  </div>
</div>

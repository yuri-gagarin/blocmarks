<% if !@topic.errors.empty? %>
  <% @topic.errors.full_messages.each do |message| %>
  <div class="alert alert-danger alert-dismissable">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <p><%= message %></p>
  </div>
  <% end %>
<% end %>
<div class="container-fluid topic-container">
  <div class="row">
    <h2 class="col-md-8 offset-md-2">New Topic</h2>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
    <%= form_for(@topic) do |f| %>
      <div class="form-group">
        <%= f.label :title %><br />
        <div>
        <%= f.text_area :title, cols: 100, autofocus: true, autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "Create Topic", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

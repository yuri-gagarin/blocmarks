<div class="container-fluid topic-container">
  <% @topics.each do |topic| %>
  <div class="topic-window">
    <h3><%= topic.title %></h3>
    <p>Created By: <%= User.where(:id => topic.user_id).pluck(:user_name).join %></p>
    <div class="topic-control-section">
      <div class="topic-more-btn">
        <%= link_to "Explore", topic_path(topic.id) %>
      </div>
      <% if (topic.user_id == current_user.id) || (current_user.role == "admin") %>
      <div class="delete-btn">
        <%= button_to "DELETE", topic, method: :delete %>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

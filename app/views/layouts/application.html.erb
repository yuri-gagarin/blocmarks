<!DOCTYPE html>
<html>
  <head>
    <title>Blocmarks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-company-red">
      <a class="navbar-brand" href="/">Home</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="#">All <span class="sr-only">(current)</span></a>
          <a class="nav-item nav-link" href="#">Sports</a>
          <a class="nav-item nav-link" href="#">Science</a>
          <a class="nav-item nav-link" href="#">Games</a>
        </div>
        <div class = "navbar-nav ml-auto">
        <% if user_signed_in? %>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle dropdown-button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            My BlocMarks
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/:topic_id/bookmarks/new">Create a Bookmark</a>
            <a class="dropdown-item" href="/topics/new">Create a Topic</a>
            <a class="dropdown-item" href="/bookmarks">Show My Bookmarks</a>
            <a class="dropdown-item" href="#">My Profile</a>
          </div>
        </div>
        <%= link_to "Sign Out", destroy_user_session_path, class: "nav-item nav-link", method: :delete %>
        <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "nav-item nav-link" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "nav-item nav-link" %>
        <% end %>
        </div>
      </div>
    </nav>
    <% if !flash.empty? %>
        <% flash.keys.each do |key| %>
          <div class="alert alert-warning alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <p><%= flash[key] %></p>
            <% puts flash[key] %>
          </div>
        <% end %>
    <% end %>
    <%= yield %>
  </body>
  <nav class="navbar navbar-expand-lg navbar-light bg-company-red">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <div class"nav-item nav-link">facebook</div>
        <div class"nav-item nav-link">facebook</div>
        <div class"nav-item nav-link">facebook</div>
      </div>
    </div>
  </nav>
</html>
